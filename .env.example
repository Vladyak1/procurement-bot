# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# ID группы для админских уведомлений (с минусом для групп)
ADMIN_GROUP_ID=-1234567890

# ID группы/канала для публикации лотов (с минусом для групп)
PARSE_GROUP_ID=-1234567890

# Список ID администраторов через запятую
ADMIN_IDS=123456789,987654321

# Parser Configuration
# RSS URL для парсинга лотов с torgi.gov.ru
# Параметр dynSubjRF=80 - код региона Севастополь (можно изменить)
RSS_URL=https://torgi.gov.ru/new/api/public/lotcards/rss?dynSubjRF=80&lotStatus=PUBLISHED,APPLICATIONS_SUBMISSION&byFirstVersion=true

# XHR API URL для получения дополнительной информации о лотах
XHR_URL=https://torgi.gov.ru/new/api/public/lotcards/

# Database Configuration
# Путь к SQLite базе данных
DB_URL=data/procurements.db

# Filter Configuration
# Ключевые слова для включения (лот должен содержать хотя бы одно)
FILTER_INCLUDE_KEYWORDS=нежилое,нежилые,помещение,помещения,здание,жилое,квартира,земельный,участок,имущественный,комплекс,недвижимого,недвижимое,дом,строение,комната

# Ключевые слова для исключения (лот не должен содержать ни одного)
FILTER_EXCLUDE_KEYWORDS=автомобиль,камаз,маз,трактор,погрузчик,лом,судно,гидроцикл,транспорт,оборудование,станок
